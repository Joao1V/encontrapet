{
   "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
   "assist": {
      "actions": {
         "source": {
            "organizeImports": {
               "level": "on",
               "options": {
                  "groups": [
                     ["react"],
                     ["@heroui/**"],
                     ["@encontra-pet/**"],
                     ":BLANK_LINE:",
                     ["@/**"],
                     "module",
                     "type"
                  ]
               }
            }
         }
      }
   },
   "vcs": {
      "enabled": true,
      "clientKind": "git",
      "useIgnoreFile": true
   },
   "files": {
      "ignoreUnknown": false,
      "includes": ["**", "!node_modules", "!.next", "!dist", "!build"]
   },
   "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 3,
      "lineWidth": 100
   },
   "javascript": {
      "formatter": {
         "quoteStyle": "single",
         "trailingCommas": "all",
         "semicolons": "always"
      }
   }
}
